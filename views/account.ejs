<% layout('layout',{title:'Account & Billing'}) %>
<h2>Account & Billing</h2>
<p>Name: <strong><%= user.name %></strong></p>
<p>Tier: <span class="tag"><%= user.tier %></span></p>
<div class="grid cols-3">
  <div class="card">
    <h3>Basic</h3>
    <p class="small">Evaluate + Beginner Module;<br/> daily interaction limits.</p>
    <form method="post" action="/account/plan">
      <input type="hidden" name="tier" value="Basic"/>
      <button class="btn <%= user.tier==='Basic'?'':'ghost' %>"><%= user.tier==='Basic'?'Current Plan':'Switch to Basic' %></button>
    </form>
  </div>
  <div class="card">
    <h3>Pro</h3>
    <p class="small">Evaluate, Design, Generate (limited daily Generates), full education.</p>
    <form method="post" action="/account/plan">
      <input type="hidden" name="tier" value="Pro"/>
      <button class="btn <%= user.tier==='Pro'?'':'ghost' %>"><%= user.tier==='Pro'?'Current Plan':'Switch to Pro' %></button>
    </form>
  </div>
  <div class="card">
    <h3>Elite</h3>
    <p class="small">Everything + Evolve (uploads + diagnostics), unlimited interactions.</p>
    <form method="post" action="/account/plan">
      <input type="hidden" name="tier" value="Elite"/>
      <button class="btn <%= user.tier==='Elite'?'':'gold' %>"><%= user.tier==='Elite'?'Current Plan':'Upgrade to Elite' %></button>
    </form>
  </div>
</div>
