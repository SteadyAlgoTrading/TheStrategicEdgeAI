<% layout('layout',{title:'Evaluate'}) %>
<h2>Evaluate</h2>
<p class="small">Understand market states & fundamentals. <em>Educational use only.</em></p>
<form method="get" action="/assistants/evaluate">
  <div class="row">
    <div><label>Symbol</label><input class="input" name="symbol" value="<%= params.symbol || 'ES' %>"/></div>
    <div><label>Timeframe</label><select class="input" name="tf">
      <option <%= (params.tf||'1m')==='1m'?'selected':'' %>>1m</option>
      <option <%= (params.tf||'1m')==='3m'?'selected':'' %>>3m</option>
      <option <%= (params.tf||'1m')==='5m'?'selected':'' %>>5m</option>
      <option <%= (params.tf||'1m')==='15m'?'selected':'' %>>15m</option>
    </select></div>
    <div style="align-self:flex-end"><button class="btn">Run</button></div>
  </div>
</form>

<div class="grid cols-2">
  <div class="card">
    <h3>Market State (mock)</h3>
    <ul>
      <li>Trend: <strong><%= evalOut.trend %></strong></li>
      <li>Volatility: <strong><%= evalOut.vol %></strong></li>
      <li>Context: <%= evalOut.context %></li>
    </ul>
    <p class="small">Why it matters: <%= evalOut.why %></p>
    <form method="post" action="/assistants/evaluate/send-to-design">
      <input type="hidden" name="symbol" value="<%= params.symbol || 'ES' %>"/>
      <input type="hidden" name="tf" value="<%= params.tf || '1m' %>"/>
      <button class="btn gold">Send to Design</button>
    </form>
  </div>
  <div class="card">
    <h3>Suggested Readings</h3>
    <ul>
      <li><a href="/learning">Moving Averages 101</a></li>
      <li><a href="/learning">Risk per Trade & ATR</a></li>
    </ul>
  </div>
</div>
