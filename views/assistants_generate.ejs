<h2>Generate</h2>
<p class="small">Convert your Design spec into cloud-hosted artifacts (no downloads).</p>
<form method="post" action="/assistants/generate/build">
  <div class="grid cols-2">
    <div class="card">
      <h3>Target</h3>
      <label>Platform</label>
      <select class="input" name="platform">
        <option>NinjaTrader</option>
        <option>TradingView</option>
      </select>
      <label>Parameters Visibility</label>
      <select class="input" name="visibility">
        <option>Adjustable</option>
        <option>Locked</option>
      </select>
    </div>
    <div class="card">
      <h3>Preview</h3>
      <p class="small">A non-downloadable artifact will be saved to your Project.</p>
    </div>
  </div>
  <button class="btn gold">Generate Artifact</button>
</form>

<% if (artifact) { %>
  <h3>Artifact Preview</h3>
  <div class="code"><%= artifact %></div>
  <p class="small">Saved to your latest Project version.</p>
<% } %>
