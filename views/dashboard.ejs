<div class="row" style="align-items:center;justify-content:space-between">
  <div>
    <h2>Welcome, <%= user.name %></h2>
    <p class="small">Tier: <span class="tag"><%= user.tier %></span> <a href="/account">Manage</a></p>
  </div>
  <div>
    <% if (user.tier !== 'Elite') { %>
      <div class="alert upgrade">
        <strong>Pro/Elite unlocks more.</strong> Evolve (uploads + diagnostics) is Elite-only.
        <a class="btn gold" href="/account">See plans</a>
      </div>
    <% } %>
  </div>
</div>

<div class="grid cols-3">
  <div class="card">
    <h3>Resume</h3>
    <% if (resume) { %>
      <p class="small">Last Project: <strong><%= resume.name %></strong></p>
      <a class="btn" href="/projects/<%= resume.id %>">Continue</a>
    <% } else { %>
      <p class="small">No recent projects.</p>
      <a class="btn" href="/projects/new">Start a Project</a>
    <% } %>
  </div>
  <div class="card">
    <h3>Adaptive EDGE Roadmap</h3>
    <ul>
      <li>Evaluate — <%= roadmap.evaluate %></li>
      <li>Design — <%= roadmap.design %></li>
      <li>Generate — <%= roadmap.generate %></li>
      <% if (user.tier === 'Elite') { %>
        <li>Evolve — <%= roadmap.evolve %></li>
      <% } %>
    </ul>
  </div>
  <div class="card">
    <h3>Command Palette</h3>
    <input id="cmdk" class="input" placeholder="Type to filter quick actions"/>
    <div data-cmd="start new project design evaluate uploads learning billing policies">
      <p><a href="/projects/new">Start a new Project</a></p>
      <p><a href="/assistants/design">Open Design Assistant</a></p>
      <p><a href="/uploads">Upload backtest</a></p>
      <p><a href="/account">Billing & Plans</a></p>
      <p><a href="/support">Policies & Support</a></p>
    </div>
  </div>
</div>

<h3>Workspace</h3>
<div class="grid cols-3">
  <div class="card">
    <h3>EDGE Assistants</h3>
    <p class="small">Evaluate, Design, Generate<% if(user.tier==='Elite'){ %>, Evolve<% } else { %> <span class="lock">(+ Evolve locked)</span><% } %></p>
    <a class="btn" href="/assistants/evaluate">Open Assistants</a>
  </div>
  <div class="card">
    <h3>My Saved Projects</h3>
    <p class="small"><a href="/projects">View all</a></p>
    <ul>
      <% projects.slice(0,3).forEach(p=>{ %>
        <li><a href="/projects/<%= p.id %>"><%= p.name %></a> <span class="tag"><%= p.status %></span></li>
      <% }) %>
    </ul>
  </div>
  <div class="card">
    <h3>Learning</h3>
    <p class="small">Next lesson: <%= nextLesson?.title || 'Beginner Module' %></p>
    <a class="btn" href="/learning">Go to Learning</a>
  </div>
</div>
